<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/music_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/author_img"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@mipmap/home_live"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/music_title"
            android:layout_toEndOf="@+id/author_img"

            android:text="歌手"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@id/count"
            android:layout_toRightOf="@+id/author_img"
            android:text="歌单"

            android:textColor="#a4c751"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/author_img"
            android:text="count"
            android:textColor="#a4c751"

            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>